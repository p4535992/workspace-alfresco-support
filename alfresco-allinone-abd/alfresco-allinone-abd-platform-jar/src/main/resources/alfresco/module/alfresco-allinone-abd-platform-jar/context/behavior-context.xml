<?xml version='1.0' encoding='UTF-8'?> 
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
          http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
        
        
   <!--  with java class -->       
   <bean id="policyLogger" class="it.abd.alfresco_allinone_abd.behaviors.PolicyLogger" init-method="init"> 
       <property name="policyComponent" ref="policyComponent" /> 
    </bean> 
    
    <!-- with webscript -->
    <bean id="onUpdateHrPolicy" class="org.alfresco.repo.policy.registration.ClassPolicyRegistration" 
          parent="policyRegistration"> 
         <property name="policyName"> 
           <value>{http://www.alfresco.org}onUpdateNode</value> 
         </property> 
         <property name="className">
           <value>{http://www.someco.com/model/content/1.0}hrPolicy</value> 
         </property> 
         <property name="behaviour"> 
             <bean class="org.alfresco.repo.jscript.ScriptBehaviour" parent="scriptBehaviour"> 
               <property name="location"> 
                 <bean class="org.alfresco.repo.jscript.ClasspathScriptLocation"> 
                   <constructor-arg> 
                     <value>alfresco/extension/scripts/onUpdateNode.js</value> 
                   </constructor-arg> 
                 </bean> 
               </property> 
           </bean> 
         </property> 
     </bean> 
     
     <bean id="ratingBehaviour" class="it.abd.alfresco_allinone_abd.behaviors.Rating" init-method="init"> 
         <property name="nodeService" ref="nodeService" /> 
         <property name="policyComponent" ref="policyComponent" /> 
     </bean> 
     
    
    
    
</beans> 